<%= form_for(@order, html: {class: 'form-horizontal'}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :type, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= radio_button_tag(:type, "k1") %>
      <%= label_tag(:type_k1, "Standard Wheelchair") %><br/>
      <%= radio_button_tag(:type, "k3") %>
      <%= label_tag(:type_k3, "Lightweight Wheelchair") %><br/>
      <%= radio_button_tag(:type, "k6") %>
      <%= label_tag(:type_k6, "Heavy Duty Wheelchair") %><br/>
      <%= radio_button_tag(:type, "k7") %>
      <%= label_tag(:type_k7, "Extra HD Wheelchair") %><br/>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :front_riggings, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= radio_button_tag(:fr, "std") %>
      <%= label_tag(:fr_std, "Standard Footrests") %><br/>
      <%= radio_button_tag(:fr, "ele") %>
      <%= label_tag(:fr_ele, "Elevating Legrests") %><br/>
      <%= radio_button_tag(:fr, "hd") %>
      <%= label_tag(:fr_hd, "Heavy Duty Legrests") %><br/>
      <%= radio_button_tag(:fr, "art") %>
      <%= label_tag(:fr_art, "Articulting Legrests") %><br/>
    </div>
  </div>
  
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>

<% end %>