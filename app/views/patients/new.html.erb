<%= form_for :patient, url: patients_path do |f| %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.label      :first_name %>
      <%= f.text_field :first_name %></br>
      <%= f.label      :last_name %>
      <%= f.text_field :last_name %></br>
      <%= f.label      :height %>
      <%= f.text_field :height %></br>
      <%= f.label      :weight %>
      <%= f.text_field :weight %></br>
      <%= f.label      :birthday %>
      <%= f.date_field :birthday %></br>
      <%= f.label      :gender %>
      <%= radio_button_tag(:gender, "M") %>
      <%= label_tag("M") %>
      <%= radio_button_tag(:gender, "F") %>
      <%= label_tag("F") %><br/>
      <%= f.label      :insurance_1 %>
      <%= f.text_field :insurance_1 %></br>
      <%= f.label      :insurance_2 %>
      <%= f.text_field :insurance_2 %></br>
      <%= f.label      :discharge_date %>
      <%= f.date_field :discharge_date %></br>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.label      :email %>
      <%= f.text_field :email %></br>
      <%= f.label      :street_address %>
      <%= f.text_field :street_address %></br>
      <%= f.label      :city %>
      <%= f.text_field :city %></br>
      <%= f.label      :state %>
      <%= f.text_field :state %></br>
      <%= f.label      :zipcode %>
      <%= f.text_field :zipcode %></br>
      <%= f.label      :phone_number %>
      <%= f.text_field :phone_number %></br>
      <%= f.label      :notes %>
      <%= f.text_area  :notes %></br>
    </div>
    <div>
      <%= f.submit 'Submit', class: 'btn-primary' %>  
    </div>
  </div>
<% end %>
