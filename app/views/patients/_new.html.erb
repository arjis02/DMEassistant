<%= form_for :patient, url: new_patient_path do |f| %>
	<%= f.label      :first_name %>
	<%= f.text_field :first_name %></br>
	<%= f.label      :last_name %>
	<%= f.text_field :last_name %></br>
	<%= f.label      :height %>
	<%= f.text_field :height %></br>
	<%= f.label      :weight %>
	<%= f.text_field :weight %></br>
	<%= f.label      :birthday %>
	<%= f.text_field :birthday %></br>
	<%= radio_button_tag(:gender, "M") %>
	<%= radio_button_tag(:gender, "F") %></br>
	<%= f.label      :discharge_date %>
	<%= f.date_field :discharge_date %></br>
	<%= f.label      :email %>
	<%= f.text_field :email %></br>
	<%= f.label      :street_address %>
	<%= f.text_field :street_address %></br>
	<%= f.label      :city %>
	<%= f.text_field :city %></br>
	<%= f.label      :state %>
	<%= f.text_field :state %></br>
	<%= f.label      :zipcode %>
	<%= f.text_field :zipcode %></br>
	<%= f.label      :phone_number %>
	<%= f.text_field :phone_number %></br>
	<%= f.submit 'Submit', class: 'btn-primary' %>  
<% end %>