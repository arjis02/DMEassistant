<h1><%= @facility.name %></h1>
<div class="address">
	<%= @facility.street_address %><br/>
	<%= @facility.city %><br/>
	<%= @facility.state %><br/>
	<%= @facility.zipcode %>
</div>

<div class="patient-list">
<%= render partial: '/patients/index', locals: { patients: @facility.patients } %>
</div>

<% unless @facility.employs?(current_user) %>
	<%= form_for :employments, url: employments_path, method: 'post' do |f| %>
		<%= f.hidden_field :facility_id, :value => @facility.id %>
		<%= f.submit 'Add facility' %>
	<% end %>
<% end %>