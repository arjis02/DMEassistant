<h1><%= @facility.name %></h1>
<div class="address">
	<%= @facility.street_address %><br/>
	<%= @facility.city %><br/>
	<%= @facility.state %><br/>
	<%= @facility.zipcode %>
</div>

<h3>Pending Orders:</h3>
<div class="pending-order-list">
	<%= render partial: '/orders/index', locals: { orders: @facility.orders } %>
</div>

<%= link_to 'Add new order', new_facility_patients_path(@facility) %>